    <body>
        <div class="title">
            Online Book shop
        </div>        
        <div class="login">
                <div style="font-size: 24px; text-align: center; padding-bottom: 10px;" >Log in</div>
                <div style="padding-bottom: 35px;">Enter your account details below</div>

            <div>
                <form action="/login" method="post">
                    <label for='username'><b>Username:</b></label><br>
                    <input type="text" id="username" name="username" placeholder="" ><br><br>
                    <label for='password'><b>Password:</b></label><br>
                    <input type="password" id="password" name="password" placeholder=""><br><br>
                    <button class="button button1" type="submit" value="Login">Login</button>   
                </div>
                <label class="hint">
                    <% if (typeof msg !== 'undefined') { %>
                        <%= msg %>
                    <% } %>
                </label>
            </div>
        </div>    
    </body>
</html>